.container {
    width: 100%;
    height: 100vh;
    position: relative;
    background: #f0f0f0;
}

.game-canvas {
    width: 100%;
    height: 100%;
    display: block;
}

.game-over {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 100;
}

.game-over-text {
    font-size: 48rpx;
    color: #ffffff;
    margin-bottom: 20rpx;
}

.final-score {
    font-size: 36rpx;
    color: #ffffff;
    margin-bottom: 40rpx;
}

.restart-btn {
    padding: 20rpx 60rpx;
    background: #4CAF50;
    color: #ffffff;
    border: none;
    border-radius: 10rpx;
    font-size: 32rpx;
} 